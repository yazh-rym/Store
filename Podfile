    pod 'TagListView', '1.2'
    pod 'NHRangeSlider', '~> 0.2'

    #Pods for Storafge
    pod 'AWSCore'
    pod 'AWSS3'
    pod 'AWSCognito'

  target 'TryonTests' do
    inherit! :search_paths
  end

  target 'TryonUITests' do
    inherit! :search_paths
  end

