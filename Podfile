    pod 'Alamofire', '~> 4.4' #4.5?
    pod 'AlamofireImage', '~> 3.1' #3.3?
    pod 'SwiftyJSON'

    #Pods for Images
    pod 'ImageSlideshow', '~> 1.3' #1.4?
    pod 'ImageSlideshow/Alamofire'
    pod 'ImageSlideshow/Kingfisher'
    pod 'Kingfisher', '~> 4.0'
    
    pod 'SwiftyGif'
    pod 'YUCIHighPassSkinSmoothing'
    pod 'EPSignature'
    pod 'SearchTextField'
    
    #Pods for Validation
    pod 'PhoneNumberKit', '~> 1.2' #2.1?
    
    #Pods for UI
    pod 'Material', '2.10.2' #2.13.5?
    pod 'NVActivityIndicatorView'
    pod 'UICircularProgressRing'
